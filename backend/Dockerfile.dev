FROM node:18-alpine

WORKDIR /app

# Install nodemon globally for hot reload
RUN npm install -g nodemon
RUN apk add --no-cache netcat-openbsd

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5000

# Wait for database then start with nodemon (initDB is called in server.js)
CMD ["sh", "-c", "while ! nc -z postgres 5432; do sleep 1; done && nodemon server.js"]